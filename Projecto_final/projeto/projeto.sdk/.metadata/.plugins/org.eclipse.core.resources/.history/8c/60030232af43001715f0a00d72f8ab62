/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include <stdlib.h>

#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "xgpio.h"

XGpio GPIO;
XGpio_Config GPIO_config;

int main()
{
    init_platform();

        //GPIO Configuration
        GPIO_config.BaseAddress = XPAR_AXI_GPIO_0_BASEADDR;
        GPIO_config.DeviceId = XPAR_GPIO_0_DEVICE_ID;
        GPIO_config.IsDual = XPAR_GPIO_0_IS_DUAL;

        //Initialize GPIO
        XGpio_CfgInitialize(&GPIO, &GPIO_config, GPIO_config.BaseAddress);
        int array[]={0x00,0x02,0x03,0x04,0x05,0x00,0x00,0x00,0x00,0x00};
        //int array[]={0x0002,0x0001,0x0004,0x0063,0x000F,0x0060,0x0043,0x0054,0x0054,0x0043,0x0039,0x0073,0x0034,0x0037,0x0022,0x0010};
		int num_words=10;
		int word =0x00000000;

		for (int i =0 ; i<num_words; i++ ){
			word=word|array[i];
			word=word|0x1000; //write enable
			word=word|(i<<8);
			//putnum(word);
			//print("\n");
			XGpio_DiscreteWrite(&GPIO, 1, word);
			word=0x00000000;
		}
		print("Fim for");
		word =0x00002000;
		XGpio_DiscreteWrite(&GPIO, 1, word);


    cleanup_platform();
    return 0;
}
