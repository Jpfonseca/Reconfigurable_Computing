void print_2vga(char *s1, unsigned int b){
	unsigned int to_send;
	for(unsigned int k = 0; k < strlen(s1); k++, b++)
			{
				char a = s1[k];
				to_send = (b & 0x1FFF) | (a << 13);
				XGpio_DiscreteWrite(&GPIO_1, 1, to_send);
			}
}
